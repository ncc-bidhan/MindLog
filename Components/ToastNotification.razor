@inject IJSRuntime JS

@if (Show)
{
    <div class="fixed top-4 right-4 z-50 animate-pulse">
        <div class="bg-white rounded-lg shadow-lg border border-gray-200 p-4 min-w-[300px] max-w-md">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    @if (Type == "success")
                    {
                        <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                    }
                    else if (Type == "error")
                    {
                        <div class="w-6 h-6 bg-red-100 rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </div>
                    }
                    else if (Type == "warning")
                    {
                        <div class="w-6 h-6 bg-yellow-100 rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                        </div>
                    }
                    else
                    {
                        <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    }
                </div>
                <div class="ml-3 flex-1">
                    <h3 class="text-sm font-medium text-gray-900">
                        @Title
                    </h3>
                    <p class="mt-1 text-sm text-gray-500">
                        @Message
                    </p>
                </div>
                <div class="ml-4 flex-shrink-0">
                    <button class="text-gray-400 hover:text-gray-500 transition-colors" @onclick="Close">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Show { get; set; } = false;

    [Parameter]
    public string Type { get; set; } = "info"; // success, error, warning, info

    [Parameter]
    public string Title { get; set; } = "Notification";

    [Parameter]
    public string Message { get; set; } = "";

    [Parameter]
    public int AutoCloseAfter { get; set; } = 5000; // milliseconds

    private Timer? _timer;

    protected override void OnParametersSet()
    {
        if (Show && AutoCloseAfter > 0)
        {
            _timer?.Dispose();
            _timer = new Timer(AutoClose, null, AutoCloseAfter, Timeout.Infinite);
        }
        else if (!Show)
        {
            _timer?.Dispose();
            _timer = null;
        }
    }

    private void AutoClose(object? state)
    {
        InvokeAsync(() =>
        {
            Show = false;
            StateHasChanged();
        });
    }

    private void Close()
    {
        Show = false;
        _timer?.Dispose();
        _timer = null;
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}