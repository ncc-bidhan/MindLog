@inject IJSRuntime JS

@if (Show)
{
    <div class="toast-container">
        <div class="toast toast-@Type">
            <div class="toast-content">
                <div class="toast-icon-wrapper">
                    <div class="toast-icon-circle">
                        @if (Type == "success")
                        {
                            <svg class="toast-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        }
                        else if (Type == "error")
                        {
                            <svg class="toast-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        }
                        else if (Type == "warning")
                        {
                            <svg class="toast-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                        }
                        else
                        {
                            <svg class="toast-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        }
                    </div>
                </div>
                <div class="toast-body">
                    <h3 class="toast-title">@Title</h3>
                    <p class="toast-message">@Message</p>
                </div>
                <button class="toast-close" @onclick="Close">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Show { get; set; } = false;

    [Parameter]
    public string Type { get; set; } = "info"; // success, error, warning, info

    [Parameter]
    public string Title { get; set; } = "Notification";

    [Parameter]
    public string Message { get; set; } = "";

    [Parameter]
    public int AutoCloseAfter { get; set; } = 5000; // milliseconds

    private Timer? _timer;

    protected override void OnParametersSet()
    {
        if (Show && AutoCloseAfter > 0)
        {
            _timer?.Dispose();
            _timer = new Timer(AutoClose, null, AutoCloseAfter, Timeout.Infinite);
        }
        else if (!Show)
        {
            _timer?.Dispose();
            _timer = null;
        }
    }

    private void AutoClose(object? state)
    {
        InvokeAsync(() =>
        {
            Show = false;
            StateHasChanged();
        });
    }

    private void Close()
    {
        Show = false;
        _timer?.Dispose();
        _timer = null;
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}