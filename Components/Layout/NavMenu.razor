@inject AuthStateService AuthStateService
@inject NavigationManager NavigationManager

@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img src="images/appicon.png" alt="MindLog Logo" class="nav-logo-icon" /> MindLog
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable">
    <nav class="flex-column nav-main">
        @if (AuthStateService.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                    <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="journal" @onclick="CloseMobileMenu">
                    <span class="bi bi-journal-text-nav-menu" aria-hidden="true"></span> Journal
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="calendar" @onclick="CloseMobileMenu">
                    <span class="bi bi-calendar3-nav-menu" aria-hidden="true"></span> Calendar
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="settings" @onclick="CloseMobileMenu">
                    <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> Settings
                </NavLink>
            </div>
        }
    </nav>
    
    <nav class="flex-column nav-bottom">
        @if (AuthStateService.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link" @onclick="Logout">
                    <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login" @onclick="CloseMobileMenu">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="register" @onclick="CloseMobileMenu">
                    <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> Register
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        AuthStateService.OnAuthStateChanged += HandleAuthStateChanged;
    }

    public void Dispose()
    {
        AuthStateService.OnAuthStateChanged -= HandleAuthStateChanged;
    }

    private void HandleAuthStateChanged(User? user)
    {
        StateHasChanged();
    }

    private void Logout()
    {
        AuthStateService.Logout();
        NavigationManager.NavigateTo("/login");
    }

    private void CloseMobileMenu()
    {
        // Close mobile menu by unchecking the toggler
        if (OperatingSystem.IsBrowser())
        {
            // For mobile view, close the menu after navigation
            StateHasChanged();
            // Use JS interop to uncheck the toggler
        }
    }
}