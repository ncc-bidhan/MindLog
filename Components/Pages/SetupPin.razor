@page "/setup-pin"
@using MindLog.Services
@inject NavigationManager NavigationManager
@inject AuthService AuthService
@inject AuthStateService AuthStateService

    <div class="auth-card">
        <div class="auth-logo">
            <h1>MindLog</h1>
            <p>Set up your PIN to secure your journal</p>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger auth-alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </svg>
                @_errorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="alert alert-success auth-alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
                @_successMessage
            </div>
        }

        <EditForm class="auth-form" Model="@this" OnSubmit="HandlePinSetup">
            <div class="mb-4">
                <label class="form-label">Create PIN</label>
                <input class="form-control" type="password" @bind="Pin" placeholder="Create a PIN (4-6 digits)" required maxlength="6" pattern="[0-9]*" inputmode="numeric" />
            </div>

            <div class="mb-4">
                <label class="form-label">Confirm PIN</label>
                <input class="form-control" type="password" @bind="ConfirmPin" placeholder="Confirm your PIN" required maxlength="6" pattern="[0-9]*" inputmode="numeric" />
            </div>

            <button class="btn auth-btn" type="submit" disabled="@_isLoading">
                @if (_isLoading)
                {
                    <div class="auth-spinner"></div>
                    <span>Setting up...</span>
                }
                else
                {
                    <span>Set Up PIN</span>
                }
            </button>
        </EditForm>


    </div>

@code {
    private string Pin = "";
    private string ConfirmPin = "";
    private string? _errorMessage;
    private string? _successMessage;
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        if (AuthStateService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/");
            return;
        }

        var hasUsers = await AuthService.HasAnyUsersAsync();
        if (hasUsers)
        {
            NavigationManager.NavigateTo("/login");
        }
    }

    private async Task HandlePinSetup()
    {
        _errorMessage = null;
        _successMessage = null;
        _isLoading = true;

        try
        {
            if (Pin != ConfirmPin)
            {
                _errorMessage = "PINs do not match";
                return;
            }

            // For first-time setup, create a default user with the PIN
            var user = await AuthService.RegisterAsync("User", "user@mindlog.local", Pin);
            AuthStateService.SetUser(user);
            _successMessage = "PIN setup successful! Redirecting to your journal...";
            
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/");
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }
}
