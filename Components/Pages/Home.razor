@page "/"
@inject AuthStateService AuthStateService
@inject NavigationManager NavigationManager

@code {
    protected override void OnInitialized()
    {
        if (!AuthStateService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
    }

    protected override void OnParametersSet()
    {
        if (!AuthStateService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
        }
    }

    private void NavigateToJournal()
    {
        NavigationManager.NavigateTo("/journal");
    }
}

@if (AuthStateService.IsAuthenticated)
{
    <div class="dashboard-container">
        <h1 class="dashboard-title">Welcome to MindLog, @AuthStateService.CurrentUser?.Username!</h1>

        <p class="dashboard-subtitle">Your personal journal and note-taking application.</p>

        <!-- Streak Tracking Components -->
        <StreakTracker />

        <div class="dashboard-content mt-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Dashboard</h5>
                    <p class="card-text">Welcome back! Your journal entries will appear here.</p>
                    <button class="btn btn-primary" @onclick="NavigateToJournal">Create New Entry</button>
                </div>
            </div>
        </div>
    </div>
}
